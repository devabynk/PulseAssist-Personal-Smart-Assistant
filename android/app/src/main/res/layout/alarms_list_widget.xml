<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_solid"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarms"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:id="@+id/alarms_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Alarm item 1 -->
        <LinearLayout
            android:id="@+id/alarm_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/alarm_item_1_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alarm_item_1_title"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/alarm_item_1_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Alarm item 2 -->
        <LinearLayout
            android:id="@+id/alarm_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/alarm_item_2_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alarm_item_2_title"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/alarm_item_2_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:paddingStart="8dp" />
        </LinearLayout>

        <!-- Alarm item 3 -->
        <LinearLayout
            android:id="@+id/alarm_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/alarm_item_3_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alarm_item_3_title"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/alarm_item_3_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:paddingStart="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/empty_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No alarms set"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingTop="16dp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
