<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Notes"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:id="@+id/notes_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Note items will be added programmatically -->
        <TextView
            android:id="@+id/note_item_1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/note_item_1_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/note_item_2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/note_item_2_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/note_item_3_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/note_item_3_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/empty_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No notes yet"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingTop="16dp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
