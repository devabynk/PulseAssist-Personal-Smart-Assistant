<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/widget_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Reminder"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:alpha="0.8"
        android:paddingBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/reminder_priority_indicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#FF9800"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reminder_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reminder Title"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/reminder_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description..."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.9"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/reminder_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 2, 15:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.9" />

            <TextView
                android:id="@+id/reminder_due_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due in 2h"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:alpha="0.7"
                android:paddingTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
