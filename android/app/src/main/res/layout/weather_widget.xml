<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_solid"
    android:padding="16dp">

    <TextView
        android:id="@+id/widget_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/widget_text_primary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/widget_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--Â°"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/widget_accent"
        android:layout_below="@id/widget_city"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/widget_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunny"
        android:textSize="14sp"
        android:textColor="@color/widget_text_secondary"
        android:layout_below="@id/widget_temp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/widget_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updated: --:--"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
